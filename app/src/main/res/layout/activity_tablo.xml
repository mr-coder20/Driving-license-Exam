                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/rec_bordered_selectable_item_background"
                        android:clickable="true"
                        android:elevation="20dp"
