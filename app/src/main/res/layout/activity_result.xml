    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/resultEmoji"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusTextView"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/pass" />


    <TableRow

        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        app:layout_constraintBottom_toTopOf="@+id/showAnswersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/bad_resultTextView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/rec_bordered_selectable_item_background"
            android:gravity="center"
            android:text="Cell 1" />


        <TextView
            android:id="@+id/good_resultTextView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/rec_bordered_selectable_item_background"
            android:gravity="center"
            android:text="Cell 2" />
    </TableRow>


    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/showAnswersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec3_bordered_selectable_item_background"
        android:text="نمایش پاسخ‌ها"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>



